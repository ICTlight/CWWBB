<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.domain.salary.SalaryDemo">
<resultMap id="salaryDemoMapper"  type="com.app.domain.salary.SalaryDemo">
    	<id  property="saldemoid" column="saldemoid"  javaType="long" jdbcType="NUMERIC"/>
        <result property="saldemoname" column="saldemoname"  javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result property="saldemoen" column="saldemoen"  javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result property="saldemost" column="saldemost"  javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result  property="saldemods" column="saldemods"  javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result  property="coid" column="coid"  javaType="long" jdbcType="NUMERIC"/>
        <result property="coname" column="coname"  javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result  property="createby" column="createby"  javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result  property="updateby" column="updateby"  javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result  property="createtime" column="createtime"  javaType="java.util.Date" jdbcType="DATE"/> 
        <result  property="updatetime" column="updatetime"  javaType="java.util.Date" jdbcType="DATE"/>        
    </resultMap>
    
    <insert id="saveSaldemo" parameterType="com.app.domain.salary.SalaryDemo">    
      INSERT INTO sa_demos (saldemoid,saldemoname,saldemoen,saldemost,saldemods,coid,coname,createby,updateby,createtime,updatetime)
      VALUES(
        #{saldemoid,jdbcType=NUMERIC},
        #{saldemoname,jdbcType=VARCHAR},
        #{saldemoen,jdbcType=VARCHAR},        
        #{saldemost,jdbcType=VARCHAR},        
        #{saldemods,jdbcType=VARCHAR},
        #{coid,jdbcType=NUMERIC},  
        #{coname,jdbcType=VARCHAR},        
        #{createby,jdbcType=VARCHAR},        
        #{updateby,jdbcType=VARCHAR}, 
        #{createtime,jdbcType=DATE},
        #{updatetime,jdbcType=DATE}    
     )
  </insert>
	<!-- 根据id查找用户信息 -->
  <select id="findSaldemoBySaldemoid" parameterType="Long" resultType="com.app.domain.salary.SalaryDemo">
  	<![CDATA[
  	 SELECT * FROM sa_demos WHERE saldemoid=#{saldemoid}
  	]]>
  </select>
  
  <select id="getsaldemoid" parameterType="Long" resultType="Long">
  	<![CDATA[
  	 SELECT _nextval('sa_demos')
  	]]>
  </select>
  
  <!-- 根据企业id查找模板信息 -->
  <select id="findSaldemoByCoid" parameterType="Long" resultType="com.app.domain.salary.SalaryDemo">
  	<![CDATA[
  	 SELECT * FROM sa_demos WHERE coid=#{coid}
  	]]>
  </select>
  
  <select id="findUserByuserame" parameterType="String" resultType="com.app.domain.salary.SalaryDemo">
  	<![CDATA[
  	 SELECT * FROM SS_USER WHERE username=#{username}
  	]]>
  </select>
  
  
  
  <select id = "findUsernameCount" parameterType = "String" resultType = "int" >
       SELECT COUNT(*) FROM SS_USER WHERE username=#{username}
  </select>
  <select id = "findEmailCount" parameterType = "String" resultType = "int">
       SELECT COUNT(*) FROM SS_USER WHERE email=#{email}
  </select>
  
  <update id="updateUserbyid" parameterType="com.app.domain.salary.SalaryDemo">      
      UPDATE SS_USER 
      <set>
      <if test="username!=null and username!=''"> 
      		username=#{username,jdbcType=VARCHAR},
      </if>
      <if test="email!=null and email!=''"> 
      		email=#{email,jdbcType=VARCHAR},
      </if>      
      <if test="password!=null and password!=''"> 
      		password=#{password,jdbcType=VARCHAR},
      </if>     
      <if test="status!=null and status!=''"> 
      		status=#{status,jdbcType=VARCHAR}
      </if>
      </set>
      WHERE userid=#{userid}
  </update>
</mapper>